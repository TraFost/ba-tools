{
	"biome.enabled": true,
	"eslint.enable": true,
	"sort-imports.on-save": false,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.formatOnPaste": false,
	"editor.formatOnSave": true,
	"editor.codeActionsOnSave": {
		"quickfix.biome": "always",
		"source.organizeImports.biome": "always"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[css]": {
		"editor.defaultFormatter": "biomejs.biome"
	}
}
